<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

 <name>MDB2Example</name>
 <create>true</create>
 <overwrite>true</overwrite>

 <table>

  <name>People</name>

  <declaration>

   <field>
    <name>id</name>
    <type>integer</type>
    <unsigned>true</unsigned>
    <notnull>true</notnull>
    <default>0</default>
    <autoincrement>1</autoincrement>
   </field>

   <field>
    <name>name</name>
    <type>text</type>
    <length>128</length>
    <notnull>true</notnull>
    <default>unknown</default>
   </field>

   <field>
    <name>age</name>
    <type>integer</type>
    <unsigned>true</unsigned>
    <notnull>false</notnull>
   </field>

   <field>
    <name>birthdate</name>
    <type>date</type>
    <notnull>false</notnull>
    <default></default>
   </field>

   <field>
    <name>occupation</name>
    <type>text</type>
    <length>128</length>
    <notnull>false</notnull>
   </field>

   <field>
    <name>updated</name>
    <type>timestamp</type>
    <notnull>false</notnull>
    <default></default>
   </field>

   <field>
    <name>aux</name>
    <type>float</type>
    <unsigned>true</unsigned>
    <notnull>false</notnull>
   </field>

   <index>
    <name>PRIMARY</name>
    <primary>true</primary>
    <field>
     <name>id</name>
     <sorting>ascending</sorting>
    </field>
   </index>

  </declaration>

  <initialization>

