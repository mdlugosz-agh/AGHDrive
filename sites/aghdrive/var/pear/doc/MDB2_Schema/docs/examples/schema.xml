   <insert>
    <field>
     <name>name</name>
     <value>John</value>
    </field>
    <field>
     <name>birthdate</name>
     <value>2005-01-16</value>
    </field>
    <field>
     <name>occupation</name>
     <value>philosopher</value>
    </field>
    <field>
     <name>updated</name>
     <function>
      <name>now</name>
     </function>
    </field>
   </insert>

   <update>
    <field>
     <name>aux</name>
     <expression>
      <function>
       <name>DATEDIFF</name>
       <column>updated</column>
       <column>birthdate</column>
      </function>
      <operator>DIVIDED</operator>
      <value>365</value>
     </expression>
    </field>

    <field>
     <name>age</name>
     <function>
      <name>floor</name>
      <column>aux</column>
     </function>
    </field>
   </update>

   <update>
    <field>
     <name>aux</name>
     <null></null>
    </field>
   </update>

  </initialization>

 </table>

